<%= simple_form_for([TaskVehicle.new], local:true) do |f| %>

  <div class="form-inputs">
    <div class="row ">
      <div  class="col-xs-2 col-md-2  ">
        <%= f.hidden_field :task_id, :value => @task.id %>
        <%= f.association :vehicle, :collection => Master.Vehicle.order('code ASC'), label: false %>
      </div>
      <div  class="col-xs-2 col-md-2  ">
          <%= f.association :driver, :collection => Master.Staff.order('code ASC'), label: false %>
      </div>
      <div  class="col-xs-2 col-md-2  ">
        <%= f.input :start_km, label: false  %>
      </div>
      <div  class="col-xs-2 col-md-2  ">
        <%= f.input :end_km, label: false   %>        
      </div>
      <div  class="col-xs-1 col-md-1  ">
        <%= f.input :tunnel_expense, label: false   %>        
      </div>
      <div  class="col-xs-1 col-md-1  ">
        <%= f.input :parking_expense, label: false   %>        
      </div>
      <div  class="form-actions col-xs-2 col-md-2  ">
        <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
            <i class="fa fa-save fa-2x" style="color:blue" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>

  </div>

<% end %>