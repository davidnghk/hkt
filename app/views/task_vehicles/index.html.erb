<p id="notice"><%= notice %></p>

<h1>Task Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Vehicle</th>
      <th>Driver</th>
      <th>Start km</th>
      <th>End km</th>
      <th>Run km</th>
      <th>Tunnel expense</th>
      <th>Parking expense</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_vehicles.each do |task_vehicle| %>
      <tr>
        <td><%= task_vehicle.task_id %></td>
        <td><%= task_vehicle.vehicle_id %></td>
        <td><%= task_vehicle.driver_id %></td>
        <td><%= task_vehicle.start_km %></td>
        <td><%= task_vehicle.end_km %></td>
        <td><%= task_vehicle.run_km %></td>
        <td><%= task_vehicle.tunnel_expense %></td>
        <td><%= task_vehicle.parking_expense %></td>
        <td><%= link_to 'Show', task_vehicle %></td>
        <td><%= link_to 'Edit', edit_task_vehicle_path(task_vehicle) %></td>
        <td><%= link_to 'Destroy', task_vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

