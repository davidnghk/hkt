<p id="notice"><%= notice %></p>

<h1>Readings</h1>

<table>
  <thead>
    <tr>
      <th>Thing</th>
      <th>Reading time</th>
      <th>Content</th>
      <th>Thing</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readings.each do |reading| %>
      <tr>
        <td><%= reading.thing %></td>
        <td><%= reading.reading_time %></td>
        <td><%= reading.content %></td>
        <td><%= reading.thing_id %></td>
        <td><%= reading.created_at.strftime('%F %H:%M:%S')  %></td>
        <td><%= link_to 'Show', reading %></td>
        <td><%= link_to 'Edit', edit_reading_path(reading) %></td>
        <td><%= link_to 'Destroy', reading, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

