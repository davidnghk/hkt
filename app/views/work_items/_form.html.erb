<%= simple_form_for(@work_item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


<div class="card">
  <div class="card-header">
    <%= t('work_items') %> 
  </div>
  <div class="card-body">

  <div class="form-inputs">
    <%= f.hidden_field :work_id %>

    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.input :local_name %>     
    <%= f.input :heading %>     
    <%= f.input :description, as: :rich_text_area  %>        
    <%= f.association :unit_type, :collection => Master.where('parent_id == 9 '), selected: 1 %>
    <%= f.input :unit_rate %>     
  </div>

  </div>

  <div class="card-footer">
    <div class="form-actions">
      <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
          <i class="fa fa-save fa-2x" style="color:blue" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>

<% end %>

