<div class="card">
  <div class="card-header">
      <%= t('task_staff') %> 
  </div>
  <div class="card-body">

    <%= simple_form_for(@task_staff) do |f| %>

      <div class="form-inputs">

        <%= f.input :task_id, :as => :hidden %>

        <div class="row">
          <div  class="col-xs-6 col-md-6 ">
            <%= f.association :staff, :collection => Master.Staff %>
          </div>
          <div  class="col-xs-6 col-md-6 ">
            <%= f.association :task_role, :collection => Master.TaskRole %>
          </div>
        </div>

        <div class="row">
          <div  class="col-xs-6 col-md-6 ">
            <%= f.input :start_time, as: :datetime, html5: true %>
          </div>
          <div  class="col-xs-6 col-md-6 ">
            <%= f.input :end_time, as: :datetime, html5: true %>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
  </div>

</div>