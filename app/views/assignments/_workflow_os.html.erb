<% if @assignment.booked? %>
    <div class="btn-group d-flex" role="group" aria-label="...">
      <%= link_to t('cancel'), cancel_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
      <%= link_to t('ask'), ask_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-warning btn-tab col"  %> 
    </div>
<% end %>

<% if @assignment.infoForRequest? %>
    <div class="btn-group d-flex" role="group" aria-label="...">
      <%= link_to t('cancel'), cancel_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
      <%= link_to t('ask'), ask_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-warning btn-tab col"  %> 
    </div>
<% end %>

<% if @assignment.asked? %>
    <div class="btn-group d-flex" role="group" aria-label="...">
      <%= link_to t('approve'), approve_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
      <%= link_to t('askRequestInfo'), askRequestInfo_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-warning btn-tab col"  %> 
      <%= link_to t('assign'), assign_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
    </div>
<% end %>

<% if @assignment.infoForWork? %>
    <div class="btn-group d-flex" role="group" aria-label="...">
      <%= link_to t('assign'), assign_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
    </div>
<% end %>

<% if @assignment.approved? %>
    <div class="btn-group d-flex" role="group" aria-label="...">
      <%= link_to t('assign'), assign_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
    </div>
<% end %>

<% if @assignment.assigned? %>
    <div class="btn-group d-flex" role="group" aria-label="...">
      <%= link_to t('reject'), reject_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
      <%= link_to t('acknowledge'), acknowledge_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-warning btn-tab col"  %> 
      <%= link_to t('start'), start_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-warning btn-tab col"  %> 
      <%= link_to t('askWorkInfo'), askWorkInfo_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-warning btn-tab col"  %> 
    </div>
<% end %>

<% if @assignment.acknowledged? %>
    <div class="btn-group d-flex" role="group" aria-label="...">
      <%= link_to t('start'), start_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
      <%= link_to t('complete'), complete_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
    </div>
<% end %>

<% if @assignment.inProgress? %>
    <div class="btn-group d-flex" role="group" aria-label="...">
      <%= link_to t('complete'), complete_assignment_path(@assignment), method: :put, data: { turbolinks: false }, class: "btn btn-tab btn-info btn-tab col "  %> 
    </div>
<% end %>

<% if @assignment.completed? %>

    <button type="button" class="btn btn-block btn-normal btn-warning" data-toggle="modal" data-target="#rating"><%= t('appraise') %></button>

    <!-- Modal -->
    <div id="rating" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><%= t('rating') %></h4>
          </div>
          <div class="modal-body">

            <%= simple_form_for(@assignment) do |f| %>
                <%= f.input_field :date_range, as: :hidden, :value => nil  %>
                <div class="form-group text-center">
                  <div id="stars"></div>
                </div>
                <div class="form-group">
                  <%= f.text_area :comments, rows: 3, class: "form-control" %>
                </div>

                <div class="text-center">
                  <%= f.submit "Add Review", class: "btn btn-normal" %>
                </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
<% end %>


