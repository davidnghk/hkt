<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading text-center">
        <%#= t("photo") %>
      </div>

      <div style="padding:0" class="panel-body">
        <div style="padding:0" class="container">
          <div class="row">
            <div class="col-md-12 bg-white rounded shadow p-3 ">
              <!-- Phgotos upload goes here -->

              <%= form_for @assignment, url: assignment_photos_path(@assignment), method: 'post',
                  html: {multipart: true} do |f| %>

                 <div class="text-center">
                   <div class="form-group"> 
                    <!--
                     <span class="btn btn-info text-babu">
                     -->
                     <span >
                       <i class="fa fa-camera fa-2x" aria-hidden="true"></i>
                       <%= file_field_tag "images[]", type: :file, multiple: true %>
                     </span>
                   </div>
                 </div>

                <div class="text-center">
                  <%= button_tag type: 'submit', class: "btn btn-primary" do %>
                      <i class="fa fa-cloud-upload-alt " aria-hidden="true"></i>
                  <% end %>
                </div>

              <% end %>
            </div>
          </div>
          <% if not browser.device.mobile? %>
            <div id="photos"><%= render 'photos/photos_list' %> </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>

</div>
