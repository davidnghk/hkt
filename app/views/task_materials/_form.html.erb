<%= simple_form_for([TaskMaterial.new], local:true) do |f| %>

  <div class="form-inputs">
    <div class="row ">
      <div  class="col-xs-4 col-md-4 ">
          <%= f.hidden_field :task_id, :value => @task.id %>
          <%= f.association :material, :collection => Master.Material.order('code ASC'), label: false %>
      </div>
      <div  class="col-xs-3 col-md-3 ">
        <%= f.input :quantity, label: false  %>        
      </div>
      <div  class="col-xs-3 col-md-3 ">
        <%= f.input :cost, label: false  %>        
      </div>
      <div  class="form-actions col-xs-2 col-md-2 ">
        <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
            <i class="fa fa-save fa-2x" style="color:blue" aria-hidden="true"></i>
        <% end %>   
      </div>
    </div>

  </div>

<% end %>