<div class="card" >
  <div class="card-header">
    <h6>
      <%= t('work')   %> 
    </h6>
  </div>
  <div class="card-body">

    <%= simple_form_for [@work], html: { class: 'form-horizontal' },
      wrapper: :horizontal_form do |f| %>
      <div class="form-inputs">
        <%= f.input :code %>
        <%= f.input :name %>
        <%= f.input :local_name %>

        <%= f.association :workflow, :collection => Master.Workflow %>
      </div>

        <div class="form-actions">
          <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
              <i class="fa fa-save fa-2x" style="color:blue" aria-hidden="true"></i>
          <% end %>
        </div>

      <% end %> 

  </div>
  <div class="card-footer text-muted">
    <%= link_to '<i class="fa fa-file-alt fa-2x" style="color:blue"></i>'.html_safe,  @work, data: { turbolinks: false }  %>
  </div>
</div>