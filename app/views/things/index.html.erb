<p id="notice"><%= notice %></p>

<h1>Things</h1>

<table>
  <thead>
    <tr>
      <th>Thingable</th>
      <th>Code</th>
      <th>Cname</th>
      <th>Local name</th>
      <th>Category</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.thingable_id %></td>
        <td><%= thing.code %></td>
        <td><%= thing.cname %></td>
        <td><%= thing.local_name %></td>
        <td><%= thing.category_id %></td>
        <td><%= thing.parent_id %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thing', new_thing_path %>
