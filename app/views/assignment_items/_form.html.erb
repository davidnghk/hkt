<%= simple_form_for(@assignment_item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="card">
  <div class="card-header">
    <%= t('assignment_items') %> 
  </div>
  <div class="card-body">

  <div class="form-inputs">
    <%= f.hidden_field :assignment_id %>

    <%= f.association :work_item, collection: @assignment_item.assignment.work.work_items %>    

    <%= f.input :serial_number %>
    <%= f.input :rating %>
    <%= f.input :remarks %>   
  </div>

  </div>

  <div class="card-footer">
    <div class="form-actions">
      <%= button_tag type: 'submit', class: "button my-button", id: "register-button" do %>
          <i class="fa fa-save fa-2x" style="color:blue" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>

<% end %>