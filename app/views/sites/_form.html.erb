<div class="card" >
  <div class="card-header">
    <%= t('site') %>
  </div>
  <div class="card-body">

    <%= simple_form_for(@site) do |f| %>

      <div class="form-inputs">
        <%= f.hidden_field :client_id %>
        <%= f.input :code %>
        <%= f.input :name %>
        <%= f.input :local_name %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>

  <div class="card-footer">

    <%= link_to @site.client, data: { turbolinks: false } do %>
      <i class="fa fa-list fa-2x" style="color:blue"></i>
    <% end %>

  </div>