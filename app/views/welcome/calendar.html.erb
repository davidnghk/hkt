<%= content_tag :div, data: { controller: 'calendar' } do %>
  <%= content_tag :div, class: 'modal', data: { target: 'calendar.modal' } do %>
    <div class="modal-dialog" role="document">
      <div class="modal-content">

        <div class="card">
            <div class="card-header">
                <%= t("task") %>
            </div>
            <div class="card-body">

                <%= simple_form_for(Task.new, as: 'task', :remote => true) do |f| %>
                    <%= f.input :start_time, as: :datetime, html5: true %>
                    <%= f.input :end_time, as: :datetime, html5: true %>
                    <div class="row">
                      <div class="col-md-12">
                        <%= f.association :laboratory  %>
                      </div>
                    </div>
                    <%= f.association :laboratory %>
                    <%= f.input :title %>
                    <%= f.input :all_day %>
                    <%= f.submit  class: "btn btn-primary btn-lg btn-block" %>
                <% end %>
            </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= tag :div, data: { target: 'calendar.calendar' } %>
<% end %>
